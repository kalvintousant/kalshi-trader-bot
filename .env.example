# Kalshi API Credentials
KALSHI_API_KEY_ID=your_api_key_id_here
KALSHI_PRIVATE_KEY_PATH=path/to/your/private_key.pem
KALSHI_BASE_URL=https://api.elections.kalshi.com/trade-api/v2
KALSHI_WS_URL=wss://api.elections.kalshi.com/trade-api/ws/v2

# For testing, use demo environment:
# KALSHI_BASE_URL=https://demo-api.kalshi.co/trade-api/v2
# KALSHI_WS_URL=wss://demo-api.kalshi.co/trade-api/ws/v2

# Trading Configuration
MAX_POSITION_SIZE=10
MAX_DAILY_LOSS=100
ENABLED_STRATEGIES=weather_daily
# Require at least this many contracts per order (1 = allow 1-contract orders; 2+ = fewer, larger orders).
# MIN_ORDER_CONTRACTS=1
# Never buy at or above this price in cents (99 = no buys at 99¢ or 100¢; no edge at 100¢).
# MAX_BUY_PRICE_CENTS=99
# Skip single-threshold markets when forecast is within this many degrees of threshold (0 = off).
# MIN_DEGREES_FROM_THRESHOLD=2

# Weather conservative strategy: set true to require CI to NOT overlap market price (stricter, fewer trades).
# Default false = trade when edge/EV meet thresholds even if CI overlaps (more trades, higher risk).
# REQUIRE_HIGH_CONFIDENCE=false

# Weather API Keys (optional - many sources are free or have free tiers)
#
# FREE (No API Key Required):
# - NWS (National Weather Service) - Unlimited, US government source
# - NWS MOS (Model Output Statistics) - Bias-corrected forecasts
# - Open-Meteo - 10,000 requests/day, multi-model support (GFS, ECMWF, ICON, etc.)
# - GEFS Ensemble - 31 ensemble members for uncertainty quantification
# - ECMWF Ensemble - 51 ensemble members (world's best model)
#
# FREE TIER (API Key Required):
# - Tomorrow.io: https://www.tomorrow.io/weather-api/ (500 requests/day)
# - Pirate Weather: https://pirateweather.net/ (10,000 requests/month, HRRR-based)
# - Visual Crossing: https://www.visualcrossing.com/ (1,000 records/day)
# - Weatherbit: https://www.weatherbit.io/api (50 requests/day - fallback only)
#
# DEPRECATED:
# - OpenWeather: Removed per user request
# - AccuWeather: Structure present but not actively used

TOMORROWIO_API_KEY=your_tomorrowio_api_key_here
PIRATE_WEATHER_API_KEY=your_pirate_weather_api_key_here
VISUAL_CROSSING_API_KEY=your_visual_crossing_api_key_here
WEATHERBIT_API_KEY=your_weatherbit_api_key_here

# Legacy keys (deprecated, kept for backwards compatibility)
OPENWEATHER_API_KEY=your_openweather_api_key_here
ACCUWEATHER_API_KEY=your_accuweather_api_key_here

# Weather Data Source Configuration
# Enable/disable specific data sources (all enabled by default)
# ENABLE_OPEN_METEO=true
# ENABLE_PIRATE_WEATHER=true
# ENABLE_VISUAL_CROSSING=true
# ENABLE_ENSEMBLE_DATA=true

# Ensemble Configuration
# Minimum ensemble members required to use ensemble-based uncertainty (default: 10)
# MIN_ENSEMBLE_MEMBERS=10
# Cache TTL for ensemble data in seconds (default: 3600 = 1 hour)
# ENSEMBLE_CACHE_TTL=3600

# Bias Correction Configuration
# Enable/disable model-specific bias correction (learns from historical errors)
# ENABLE_BIAS_CORRECTION=true
# Minimum samples required before applying bias correction (default: 5)
# MIN_SAMPLES_FOR_BIAS=5
